<div class = "container">
    <div class = "row">
        <div class = "col-md-6 col-md-offset-3">
          <%= form_for(@activity)  do |f| %>
              <%= f.label :name,"活动名称"%>
              <%= f.text_field :name %>
              
              <%= f.label :place,"活动地址"%>
              <%= f.text_field :place %>
              
              <div>
                  <div class = "col-md-3">
                      <%= f.label :starttime,"开始时间"%>
                      <%= f.time_field :starttime %>
                  </div>
                  <div class = "col-md-3">
                      <%= f.label :endtime,"结束时间"%>
                      <%= f.time_field :endtime %>
                  </div>
              </div>
              
              <%= f.label :picture,"上传海报"%>
              <%= f.file_field :picture %><br />
              
              
              <%= f.label :number,"活动人数"%>
              <%= f.number_field :number %>
              
              <%= f.label :tag,"添加标签"%>
              <%= f.text_field :tag %>
              
              <%= f.label :content,"活动描述"%>
              <%= f.text_area :content ,size:"20*10" %>

          

            <% end %>
          
          
          
            
        </div>
    </div>
</div>